<h3>Add User</h3>

<form method='post' action="/user">
    <div class="form-group">
        <label>
            User Name <input type="text" name="Username" class="form-control" value="@ViewBag.name"/>
        </label>
    </div>
    <div class="form-group">
        <label>
            Email <input type="email" name="Email" class="form-control" value="@ViewBag.email"/>
        </label>
    </div>
    <div class="form-group">
        <label>
            Password <input type="password" name="Password" class="form-control" />
        </label>       
    </div>
    <div class="form-group">
        <label>
            Verify Password <input type="password" name="verify" class="form-control" />
        </label>
        <p style="color:red;">@ViewBag.error</p>
    </div>

    <input type='submit' value='Sign Up' class="btn btn-success">
</form>